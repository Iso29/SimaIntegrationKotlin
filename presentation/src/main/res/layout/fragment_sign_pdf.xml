<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="24dp">

    <EditText
        android:id="@+id/finEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="86dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="@string/enter_your_fin"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createAndSignPDFButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="86dp"
        app:layout_constraintTop_toBottomOf="@id/finEditText"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.054"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:text="@string/create_and_sign_pdf"
        android:background="@color/green"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pickAndSignPDFButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="86dp"
        app:layout_constraintTop_toBottomOf="@id/createAndSignPDFButton"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:text="@string/pick_and_sign_pdf"
        android:background="@color/green"/>


</androidx.constraintlayout.widget.ConstraintLayout>